<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".DoctorRegister">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="6dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="6dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="200dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="200dp" />

    <!--    <androidx.constraintlayout.widget.Guideline-->
    <!--        android:id="@+id/top"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:orientation="horizontal"-->
    <!--        app:layout_constraintGuide_begin="40dp" />-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="10dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="50dp" />


    <TextView
        android:id="@+id/title_dr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Doctor Register"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/top" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="0dp"
        android:layout_height="620dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/backdrop"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/title_dr" />

    <TextView
        android:id="@+id/fullNameTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10sp"
        android:text="Full Name"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/title_dr" />

    <EditText
        android:id="@+id/fullNameEdit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:gravity="center_vertical"
        android:hint="Enter Name"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/fullNameTitle" />


    <TextView
        android:id="@+id/fullNameTitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="Date of Birth"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right_side"
        app:layout_constraintTop_toBottomOf="@+id/fullNameEdit" />

    <EditText
        android:id="@+id/dob"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:clickable="true"
        android:editable="false"
        android:gravity="center_vertical"
        android:hint="Enter DOB"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right_side"
        app:layout_constraintTop_toBottomOf="@+id/fullNameTitle2" />

    <TextView
        android:id="@+id/fullNameTitle3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="Gender"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left_side"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/fullNameEdit" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/gender"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:clickable="true"
        android:editable="false"
        android:gravity="center_vertical"
        android:hint="Enter Gender"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_side"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/fullNameTitle2" />


    <TextView
        android:id="@+id/emailAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="Email Address"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right_side"
        app:layout_constraintTop_toBottomOf="@+id/dob" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right_side"
        app:layout_constraintTop_toBottomOf="@+id/emailAddress" />

    <TextView
        android:id="@+id/mobileNumberTextview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="Mobile Number"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left_side"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/gender" />

    <EditText
        android:id="@+id/mobilenum"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="Enter Mobile Number"
        android:inputType="number"
        android:maxLength="10"
        android:maxLines="1"
        android:paddingLeft="8dp"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/mobileNumberTextview" />


    <TextView
        android:id="@+id/fullNameTitle4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="Address"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <EditText
        android:id="@+id/street"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:gravity="center_vertical"
        android:hint="Enter Address"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/fullNameTitle4" />


    <TextView
        android:id="@+id/cityTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="City"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right_side"
        app:layout_constraintTop_toBottomOf="@+id/street" />

    <EditText
        android:id="@+id/cityEdit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:gravity="center_vertical"
        android:hint="Enter City"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right_side"
        app:layout_constraintTop_toBottomOf="@+id/cityTv" />

    <TextView
        android:id="@+id/stateTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="State"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left_side"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/street" />

    <EditText
        android:id="@+id/stateEdit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:gravity="center_vertical"
        android:hint="Enter State"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_side"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/stateTv" />

    <TextView
        android:id="@+id/zipTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="Zip Code"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right_side"
        app:layout_constraintTop_toBottomOf="@+id/cityEdit" />

    <EditText
        android:id="@+id/zipEdit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:gravity="center_vertical"
        android:hint="Enter Zip Code"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right_side"
        app:layout_constraintTop_toBottomOf="@+id/zipTv" />

    <TextView
        android:id="@+id/countryTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="Country"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left_side"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/stateEdit" />

    <EditText
        android:id="@+id/countryEdit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:gravity="center_vertical"
        android:hint="Enter Country"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_side"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/countryTv" />

    <TextView
        android:id="@+id/profileTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="Profile Image"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/zipEdit" />

    <EditText
        android:id="@+id/profileEdit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:clickable="true"
        android:drawableRight="@drawable/ic_attach_file_black_24dp"
        android:editable="false"
        android:gravity="center_vertical"
        android:hint="@string/attach_profile_image"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/profileTv" />

    <TextView
        android:id="@+id/qualificationTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="Qualification Document"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/profileEdit" />

    <EditText
        android:id="@+id/qualificationEdit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:clickable="true"
        android:drawableRight="@drawable/ic_attach_file_black_24dp"
        android:editable="false"
        android:focusable="true"
        android:gravity="center_vertical"
        android:hint="Attach Document"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/qualificationTv" />

    <TextView
        android:id="@+id/categoryTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10sp"
        android:text="Category"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/qualificationEdit" />

    <Spinner
        android:id="@+id/categoryEdit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextcustom"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/categoryTv" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttoncodesecond"
        android:gravity="center_vertical|center_horizontal"
        android:text="SUBMIT"
        android:textColor="@color/midColor"
        app:layout_constraintLeft_toLeftOf="@+id/left"
        app:layout_constraintRight_toRightOf="@+id/right"
        app:layout_constraintTop_toBottomOf="@+id/bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>